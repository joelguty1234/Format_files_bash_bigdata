{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node",
            "config": { "includeFiles": ["views/**","tmp/**"] }
        }
    ],
    "routes": [
        {"headers": {
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
            "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
        },"src": "/.*","dest": "index.js"},
        { "src": "/views/upload.ejs", "dest": "/views/upload.ejs" },
        {
            "src": "/",
            "dest": "/views/upload.ejs",
            "methods": ["GET"]
          },
          {
            "src": "/api/upload",
            "dest": "/api/upload",
            "methods": ["POST"]
          },
          {
            "src": "/download",
            "dest": "/download",
            "methods": ["GET"]
          }
    ]
}
{
    "version": 2,
    "builds": [
        {
            "src": "./index.js",
            "use": "@vercel/node",
            "config": { "includeFiles": ["views/**","tmp/**"] }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        },
        { "src": "/views/upload.ejs", "dest": "/views/upload.ejs" },
        { "src": "/upload","methods": ["POST"], "dest": "/index.js" }
    ],
    "installCommand": "npm install"
}